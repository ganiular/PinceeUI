<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PinceeUI" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PinceeUI.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionModeBackground">?attr/colorPrimaryVariant</item>
        <item name="windowActionModeOverlay">true</item>
<!--        <item name="bottomSheetDialogTheme">@style/ModalBottomSheetDialog</item>-->
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.LargeComponent</item>
    </style>

    <style name="Theme.PinceeUI.NoActionBar.Settings">
        <item name="colorSecondary">?attr/colorPrimary</item>
    </style>

    <style name="Theme.PinceeUI.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PinceeUI.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ModalBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">200dp</item>
    </style>
    <style name="ModalBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheet</item>
    </style>
    <style name="MyChatMessage" parent="Theme.PinceeUI">
        <item name="colorSurface">#B7DBCA</item>
        <item name="colorPrimarySurface">#C9F1DE</item>
        <item name="colorSurfaceVariant">@color/purple_500</item>
    </style>
    <style name="HisChatMessage" parent="MyChatMessage">
        <item name="colorSurface">#DEDEDE</item>
        <item name="colorPrimarySurface">#F2F2F2</item>
        <item name="colorSurfaceVariant">#EF17B9</item>
    </style>
    <style name="EditChatMessage" parent="MyChatMessage">
        <item name="colorSurface">#F0F0F0</item>
        <item name="colorPrimarySurface">#FFFFFF</item>
        <item name="colorSurfaceVariant">#EF17B9</item>
    </style>

    <style name="Theme.PinceeUI.BottomSheet">
        <item name="colorPrimary">@color/teal_500</item>
    </style>
</resources>